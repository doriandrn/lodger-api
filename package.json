{
  "name": "lodger",
  "version": "0.0.4",
  "description": "Offline-first API for HOAs",
  "main": "dist/index.js",
  "repository": "https://github.com/doriandrn/lodger-api.git",
  "author": "Dorian Tudorache <dorian.snaz@gmail.com>",
  "license": "MIT",
  "scripts": {
    "test": "jest index",
    "type-check": "tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch",
    "build:locales": "npx babel --presets @babel/env locales.js --filename locales -o .genLocales.js && node .genLocales.js",
    "build:types": "tsc --emitDeclarationOnly -p tsconfig.json",
    "build:docs": "jsdoc2md --files 'src/**/*.ts' --configure jsdoc2md.json > dist/docs/index.md",
    "build:js": "rollup -c",
    "build:js:babel": "babel -f src/index.ts",
    "build": "yarn build:types & yarn build:locales && yarn build:js & yarn:build:docs"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.5",
    "@babel/core": "^7.11.0",
    "@babel/plugin-external-helpers": "^7.10.4",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/plugin-proposal-decorators": "^7.10.5",
    "@babel/plugin-proposal-object-rest-spread": "^7.11.0",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.11.0",
    "@babel/preset-env": "^7.11.0",
    "@babel/preset-typescript": "^7.10.4",
    "@babel/runtime": "^7.11.0",
    "@babel/runtime-corejs3": "^7.11.2",
    "@google-cloud/translate": "^6.0.2",
    "@rollup/plugin-multi-entry": "^3.0.1",
    "@types/debug": "^4.1.5",
    "@types/faker": "^4.1.12",
    "@types/jest": "^26.0.10",
    "@types/node": "^14.6.0",
    "awesome-typescript-loader": "^5.2.1",
    "babel-jest": "^26.2.2",
    "babel-plugin-dynamic-import-node": "^2.3.3",
    "consola": "^2.15.0",
    "deep-equal": "^2.0.3",
    "faker": "^4.1.0",
    "fs": "^0.0.1-security",
    "global": "^4.4.0",
    "jest": "^26.4.0",
    "jest-cli": "^26.2.2",
    "jsdoc-babel": "^0.5.0",
    "jsdoc-to-markdown": "^6.0.1",
    "json2yaml": "^1.1.0",
    "pouchdb-adapter-memory": "^7.2.2",
    "regenerator-runtime": "^0.13.7",
    "rollup": "^2.26.4",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-copy": "^3.3.0",
    "rollup-plugin-glob-import": "^0.4.5",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-globals": "^1.4.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-terser": "^7.0.0",
    "rollup-plugin-typescript": "^1.0.1",
    "rxcollection-subscriber": "^1.0.12",
    "ts-jest": "^26.2.0",
    "ts-loader": "^8.0.2",
    "typescript": "^3.9.7"
  },
  "dependencies": {
    "pouchdb-adapter-leveldb": "^7.2.2",
    "rxdb": "^9.5.0",
    "rxjs": "^6.6.2"
  },
  "peerDependencies": {
    "mobx": "^5.15.4"
  }
}
