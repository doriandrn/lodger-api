    "json2yaml": "^1.1.0",
    "mobx": "^5.9.0",
    "rollup": "^1.1.2",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-glob-import": "^0.3.1",
