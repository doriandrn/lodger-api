{
  "compilerOptions": {
    "allowJs": false,
    "jsx": "preserve",
    "lib": [
      "esnext",
      "es2015"
    ],
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": "./src/",
    "paths": {
      "~/lib/*": [ "lib/*" ],
      "forms/*": [ "lib/forms/*" ],
      "defs/*": [ "lib/defs/*" ],
      "helpers/*": [ "lib/helpers/*" ],
      "@/*": [ "/*" ],
      "~/*": [ "/*" ]
    },
    "rootDirs": [
      "./"
    ],
    "types": [
      "node",
      "debug",
      "jest",
      "faker"
    ],
    "noEmit": true, // pt babel
    "strict": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "isolatedModules": false
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "_oldstore",
    "__tests__",
    "node_modules/*"
  ]
}
