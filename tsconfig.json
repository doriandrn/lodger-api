{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "declarationDir": "dist/types",
    "declaration": true,
    "target": "es6",
    "module": "esnext",
    "lib": [
      "esnext",
      "es2015"
    ],
    "baseUrl": "src",
    "paths": {
      "~/*": [ "./src/*" ],
      "~/lib/*": [ "lib/*" ],
      "forms/*": [ "lib/forms/*" ],
      "defs/*": [ "lib/defs/*" ],
      "helpers/*": [ "lib/helpers/*" ],
      "@/*": [ "/*" ],
    },
    "rootDirs": [
      "./"
    ],
    "types": [
      "node",
      "debug",
      "jest",
      "faker"
    ],
    // "noEmit": true, // pt babel
    "strict": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "isolatedModules": false
  },
  "include": [
    "src/**/*",
    "forms/*"
  ],
  "exclude": [
    "_oldstore",
    "__tests__/**/*",
    "node_modules/*"
  ]
}
