{
  "compilerOptions": {
    "allowJs": false,
    "jsx": "preserve",
    "lib": [ "esnext" ],
    "target": "esnext",
    "outFile": "./dist/index.js",
    "module": "amd",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "~/lib/*": [ "src/lib/*" ],
      "forms/*": [ "src/lib/forms/*" ],
      "defs/*": [ "src/lib/defs/*" ],
      "helpers/*": [ "src/lib/helpers/*" ],
      "@/*": [ "./src/*" ],
      "~/*": [ "./src/*" ]
    },
    "rootDirs": [
      "./"
    ],
    "types": [
      "node",
      "debug",
      "jest",
      "faker"
    ],
    "strict": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "esModuleInterop": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "_oldstore",
    "__tests__",
    "node_modules/*"
  ],
  "compileOnSave": true
}
