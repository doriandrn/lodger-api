{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "declarationDir": "dist/types",
    "declaration": true,
    "target": "es6",
    "module": "esnext",
    "lib": [
      "esnext",
      "es2015"
    ],
    "baseUrl": "src",
    "paths": {
      "~/*": [ "/*" ],
      "~/lib/*": [ "lib/*" ],
      // "forms/*": [ "forms/*" ],
      "defs/*": [ "lib/defs/*" ],
      "helper/*": [ "lib/helpers/*" ],
      "@/*": [ "/*" ],
      "fixtures/*": [ "__fixtures__/*" ],
      "tests/*": [ "__tests__/*"]
    },
    // "rootDirs": [
    //   "./"
    // ],
    "types": [
      "node",
      "debug",
      "jest",
      "faker"
    ],
    // "noEmit": true, // pt babel
    "strict": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "isolatedModules": false
  },
  // "include": [
  //   "src/**/*"
  //   // "forms/*"
  // ],
  "exclude": [
    "dist/**/*",
    // "__tests__/**/*",
    // "__fixtures__/**/*",
    "node_modules/*"
  ]
}
